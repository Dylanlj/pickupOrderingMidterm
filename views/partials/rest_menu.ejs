<div class="container-menu">

  <div class="row">

    <div class="col">

      <h3> MENU </h3>

      <table class="table table-hover table-bordered">

        <thead>

          <tr>

              <th scope="col"><h5>Name</h5></th>

              <th scope="col"><h5>Descriptions</h5></th>

              <th scope="col colspan="2"><h5>Price</h5></th>

              <th></th>

          </tr>

        </thead>

        <tbody>

          <% for(let foodItem in info.foodmenu) { %>

          <tr>

            <th scope="row">

              <h6><%= info.foodmenu[foodItem].name %></h6>

            </th>

            <td><h6><%= info.foodmenu[foodItem].description %></h6></td>

            <td><h6><%= info.foodmenu[foodItem].price %></h6></td>

            <td>

              <form   action="/restaurant/menu/add" method="POST" class="add-button">

                <button  type="submit" class="add-button">

                  <span class="glyphicon glyphicon-remove"></span>Add

                </button>

              </form>

            </td>

          </tr>

          <% }%>

        </tbody>

      </table>

    </div>

  </div>

</div>
