    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/login_from.css" type="text/css" />
    <link rel="stylesheet" href="/styles/index.css" type="text/css" />



    <!-- login script  -->
    <script type="text/javascript" src="/scripts/app.js"></script>

    <!-- Bootstrap riquirements  -->

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>


  </head>

  <body>



            <div id="top">

                <h1 class="text-center logo" >Go to Town</h1>

                <h2 class="text-center" >Order From Local Restaurants You Love</h2>

            </div>




        <div class="container">

            <div class="row">

                <div class="col-8">

                      <ul class="list-group">
          
                        <% for (let restaurant in info) {%>
                        <form class="restaurant" id="register" method="GET" action="/restaurant/<%=info[restaurant].id%>/menu">
                        <button class="redirect" type="submit">
                        <li class="media my-4">
                          <img class="mr-3" src="..." alt="Generic placeholder image">
                          <div class="media-body">
                            <h5 class="mt-0 mb-1"> <%= [restaurant] %></h5>

                          <%= info[restaurant].description %>
                          </div>
                        </li>  
                        </button>            
                      </form>
                        <%} %>

                      </ul>

                </div>



                      <h2 class="form-signin-heading">Please login</h2>
                      <input type="text" class="form-control" name="username" placeholder="Email Address" required="" autofocus="" />
                      <input type="password" class="form-control" name="password" placeholder="Password" required=""/>
                      <label class="checkbox">
                        <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Remember me
                      </label>
                      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                    </form>
                </div>

                <div class="btn-top">
                    <button type="button"  class="btn btn-outline-primary btn-top"><a href="#top">Back to top</a></button>
                  <form class="register-link" id="register" method="GET" action="/register">
                    <button class="redirect" type="submit">register</button>
                  </form>


                </div>
             </div>
        </div>


    <!-- Bootstrap riquirements  -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
