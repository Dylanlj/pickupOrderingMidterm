        <div id="top">
            <div class="container d-flex flex-row">
                <img src="https://www.saratogarestaurants.com/buzz/wp-content/uploads/sites/60/2016/12/primediningroom.jpg" class="media-object img-thumbnail p-2 ">
                  <div class="media-body p-2">
                      <h5 class="mt-0 mb-1"><%=info.restaurantInfo.name%></h5>
                      <p><%=info.restaurantInfo.description%></p>
                  </div>
            </div>
        </div>

        <div class="container-menu">

            <div class="row">

                <div class="col-sm-12 col-10">
                    <p> MENU </p>
                    <table class="table table-hover">

                      <thead>
                          <tr>

                              <th>Name</th>
                              <th class="text-center">Price</th>
                              <th> </th>
                          </tr>
                      </thead>

                      <tbody>
                          <% for(let foodItem in info.foodmenu) { %>
                          <tr>
                              <td class="col-sm-8 col-md-6">
                                <div class="media">
                                  <div class="media-body">
                                    <h5 class="media-heading food-name"><%= info.foodmenu[foodItem].name %></h5>
                                  </div>
                                </div>
                              </td>
                              <td class="col-sm-1 col-md-1 text-center food-price"><strong><%= info.foodmenu[foodItem].price %></strong></td>
                              <td class="col-sm-1 col-md-1">
                                <button  type="submit" class="add-button">
                                  <span class="glyphicon glyphicon-remove"></span>Add
                                </button>
                              </td>
                          </tr>
                          <% }%>
                      </tbody>

                    </table>

                </div>

            </div>

        </div>

        <div class="container cart">

            <p> CART </p>

            <div class="row">

                <div class="col-sm-12 col-10">
                    <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Product</th>
                              <th>Quantity</th>
                              <th class="text-center">Price</th>
                              <th class="text-center">Total</th>
                              <th> </th>
                          </tr>
                      </thead>
                      <tbody class="cart-body">

                          <tr class="order-line" style="visibility: hidden">
                              <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <div class="media-body">
                                        <h5 class="media-heading order-name">Empty</h5>
                                    </div>
                                </div>
                              </td>

                              <td class="col-sm-1 col-md-1" style="text-align: center">
                                <input type="text" class="form-control order-quantity" value=''>
                              </td>

                              <td class="col-sm-1 col-md-1 text-center order-price"><strong></strong></td>

                              <td class="col-sm-1 col-md-1 text-center order-total"><strong></strong></td>

                              <td class="col-sm-1 col-md-1">
                                <button type="button" class="remove-button">
                                    <span class="glyphicon glyphicon-remove"></span> Remove
                                </button>
                              </td>
                          </tr>

